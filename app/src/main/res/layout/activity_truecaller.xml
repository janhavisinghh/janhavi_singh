<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".TrueCallerActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="4.3"
                android:layout_marginBottom="20dp">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:elevation="2dp"
                    android:background="@color/lightGrey2"
                    android:backgroundTint="@color/lightGrey2"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="2dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tenth_character_request"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/lightGrey1"/>

                    <TextView
                            android:id="@+id/tenthCharTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            tools:text="h"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:paddingStart="5dp"
                            tools:ignore="RtlSymmetry"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.9"
                    android:elevation="2dp"
                    android:background="@color/lightGrey2"
                    android:backgroundTint="@color/lightGrey2"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="2dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/every_tenth_character_in_the_file"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/lightGrey1"/>
                    <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                        <TextView
                                android:id="@+id/everyTenthCharTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="Hello World!"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"/>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.9"
                    android:elevation="2dp"
                    android:background="@color/lightGrey2"
                    android:backgroundTint="@color/lightGrey2"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="2dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_of_times_each_word_has_occured"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/lightGrey1"/>
                    <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                        <TextView
                                android:id="@+id/wordCounterTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="Hello World!"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"/>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/hitUrlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="@color/black"
                android:layout_gravity="bottom|end"
                android:elevation="6dp"
                app:rippleColor="@color/twitBlue3"
                android:src="@drawable/ic_play_arrow_white_24dp"/>
    </FrameLayout>
</layout>